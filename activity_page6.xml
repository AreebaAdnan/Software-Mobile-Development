<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDF7F7"
    tools:context=".Page6">

    <ImageView
        android:id="@+id/Toparrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24"
        android:contentDescription="@string/todo" />



    <TextView
        android:id="@+id/resetpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:text="@string/reset_password"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/darkgreen"
        app:layout_constraintStart_toStartOf="@id/Toparrow"
        app:layout_constraintTop_toTopOf="@id/Toparrow" />

    <TextView
        android:id="@+id/paragragh"
        android:layout_width="363dp"
        android:layout_height="43dp"
        android:layout_marginTop="15dp"
        android:autoSizeTextType="uniform"
        android:text="@string/resetpaswword"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/resetpassword"
        app:layout_constraintTop_toBottomOf="@+id/resetpassword"
        tools:targetApi="o" />


    <TextView
        android:id="@+id/NewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/new_password"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/paragragh"
        app:layout_constraintStart_toStartOf="@+id/paragragh"
        />

    <EditText
        android:id="@+id/passwordinputone"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/enter_new_password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/NewPassword"
        app:layout_constraintTop_toBottomOf="@+id/NewPassword"
        android:importantForAutofill="no" />
    <TextView
        android:id="@+id/NewPasswordtwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/confirm_password"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/passwordinputone"
        app:layout_constraintStart_toStartOf="@+id/passwordinputone"
        />
    <EditText
        android:id="@+id/passwordinputTwo"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="@string/re_enter_password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@id/NewPasswordtwo"
        app:layout_constraintTop_toBottomOf="@+id/NewPasswordtwo"
        android:importantForAutofill="no" />

    <Button
        android:id="@+id/reset"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/darkgreen"
        android:text="@string/reset_password"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/passwordinputTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/dontwanttoreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:text="@string/don_t_want_to_reset_password"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/reset"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:text="@string/login"
        android:textColor="@color/darkgreen"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/dontwanttoreset"
        app:layout_constraintTop_toBottomOf="@id/reset"
        />



</androidx.constraintlayout.widget.ConstraintLayout>